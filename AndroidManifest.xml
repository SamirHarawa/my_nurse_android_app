        <activity
            android:name=".AddTransactioActivity"
            android:label="@string/title_activity_add_transactio" >
        </activity>
        <activity
            android:name=".ListTransactionActivity"
            android:label="@string/title_activity_list_transaction" >
        </activity>
        <activity
            android:name=".ListProfileActivity"
            android:label="@string/title_activity_list_profile" >
